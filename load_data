import pandas as pd



# Load both sheets from Excel
def load_tran_data(excel_file):
    transactions_df = pd.read_excel(excel_file, sheet_name='transactions', parse_dates=['date'])
    transactions_df['date'] = pd.to_datetime(transactions_df['date'], errors='coerce')
    transactions_df.to_excel('/Users/mattray/Desktop/GV Accouting/Outputs/Test/load_tran.xlsx')

    return transactions_df

def load_yardi_data(yardi_file):
    df = pd.read_excel(yardi_file, parse_dates=['period'])
    df['period'] = pd.to_datetime(df['period']).dt.strftime('%m/%Y')
    df["gl_code"] = df["gl_code"].astype(int)

    return df

def load_cash_balances(cash_bal_file):
    df = pd.read_excel(cash_bal_file)
    df['period'] = pd.to_datetime(df['period']).dt.strftime('%m/%Y')

    return df
